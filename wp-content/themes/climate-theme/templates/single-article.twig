{% set wrapper_class = "article" %}
{% extends "base.twig" %}

{% block content %}
    <div class="sub-header">
        <div class="intro-img">
            <img src="{{ post.thumbnail.src }}" alt="{{ post.title }}">
        </div>
        <div class="intro-title">
            <p class="article-theme">{{ post.category }}</p>
            <h1 class="intro-h1">{{post.title}}</h1>
        </div>
    </div>

    <article class="post-type-{{ post.post_type }} content-article" id="post-{{ post.ID }}">
        <div class="article-body">
            {{post.content}}
        </div>
    </article>

    <div class="discover">
        <h1>Nos articles</h1>
        <h2>DÃ©couvrez d'autres articles</h2>

        <div class="discover-articles-wrapper">
            {% for article in articles|slice(0, 6) %}
                <div class="article">

                    <div class="thumbnail-image">
                        <img src="{{ article.thumbnail.src }}" alt="{{ article.title }}">
                    </div>

                    <div class="content-article">
                        <p class="date">{{ article.date }}</p>
                        <h3 class="title">{{ article.title }}</h3>
                        <div class="extract">{{ article.preview.length(15).read_more('Lire plus') }}</div>
                    </div>

                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
