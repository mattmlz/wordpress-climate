{% set wrapper_class = "make-testimonial" %}
{% extends "base-make-testimonial.twig" %}

{% block content %}
    <div class="sub-header">
        <div class="intro-img">
            <img src="{{ post.thumbnail.src }}" alt="{{ post.title }}">
        </div>
        <div class="intro-title">
            <h1 class="intro-h1">{{post.title}}</h1>
        </div>
    </div>

    <div class="content">
        {{post.content}}
    </div>
{% endblock %}