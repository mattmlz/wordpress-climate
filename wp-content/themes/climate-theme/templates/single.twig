{% set wrapper_class = "thematic-page" %}
{% extends "base.twig" %}

{% block content %}
    <div class="sub-header">
        <div class="intro-img">
            <img src="{{ post.thumbnail.src }}" alt="{{ post.title }}">
        </div>
        <div class="intro">
            <h1 class="intro-h1">{{post.title}}</h1>
            {{post.content}}
        </div>
    </div>

    <div class="articles">
        <h1>Nos articles</h1>
        <h2>Nos derniers articles</h2>

        <div class="articles-wrapper">

            {% for article in articles.posts %}
                <div class="article">
                    <a href="{{ article.guid }}" class="post-title">{{ article.post_title  }}</a>
                    <p class="date">{{ article.post_date| date('j F Y') }}</p>
                </div>
            {% endfor %}

        </div>
    </div>
{% endblock %}
