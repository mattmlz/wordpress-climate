{% set wrapper_class = "thematic-page" %}
{% extends "base.twig" %}

{% block content %}
    <div class="sub-header">
        <div class="intro-img">
            <img src="{{ post.thumbnail.src }}" alt="{{ post.title }}">
        </div>
        <div class="intro">
            <h1 class="intro-h1">{{post.title}}</h1>
            {{post.content}}
        </div>
    </div>

    <div class="articles">
        <h1>Nos articles</h1>
        <h2>Nos derniers articles</h2>

        <div class="articles-wrapper">
            {{ post.slug }}

            {% for post in articles %}
                <div class="article">
                    <div class="post-thumnail">
                        <img src="{{ post.thumbnail.src }}" alt="{{ post.title }}">
                    </div>
                    <div class="content">

                        <span class="tag">
                            {% for tag in post.tags %}
                                {{ tag }}
                            {% endfor %}
                        </span>

                        <a href="{{ post.link }}" class="post-title">{{ post.title }}</a>

                        <p class="date">{{ post.date }}</p>
                    </div>
                </div>
            {% endfor %}

        </div>
    </div>
{% endblock %}
