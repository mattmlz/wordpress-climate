{% set wrapper_class = "about" %}
{% extends "base.twig" %}

{% block content %}
    <div class="sub-header">
        <div class="intro-img">
            <img src="{{ post.thumbnail.src }}" alt="{{ post.title }}">
        </div>
        <div class="intro-title">
            <h1 class="intro-h1">{{post.title}}</h1>
        </div>
    </div>

    <div class="intro-text">
        {{post.content}}
    </div>

    <div class="the-team">
        <h2>L'Ã©quipe</h2>
        <div class="members">
            {% for member in team %}
                <div class="member {{ member.slug }}">
                    <img src="{{ member.thumbnail.src }}" alt="{{ member.title }}">
                    <p class="name">{{ member.title }}</p>
                    <div class="team-role">{{ member.content }}</div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}